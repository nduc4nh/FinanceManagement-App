<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_alltime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="none"
            android:backgroundTint="#FFFFFF"
            android:freezesText="false"
            android:maxLines="2"
            android:text="all time"
            android:textColor="@color/ordinary"
            android:textSize="10sp"
            app:icon="@drawable/ic_baseline_all_inclusive_24"
            app:iconSize="50dp"
            app:iconTint="@color/ordinary" />

        <Button
            android:id="@+id/bubtton_today"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="none"
            android:backgroundTint="#FFFFFF"
            android:freezesText="false"
            android:maxLines="1"
            android:text="today"
            android:textColor="@color/ordinary"
            android:textSize="10sp"
            app:icon="@drawable/ic_baseline_today_24"
            app:iconSize="50dp"
            app:iconTint="@color/ordinary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Button"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_selectday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="none"
            android:backgroundTint="#FFFFFF"
            android:freezesText="false"
            android:maxLines="1"
            android:text="select day"
            android:textColor="@color/ordinary"
            android:textSize="10sp"
            app:icon="@drawable/ic_baseline_search_24"
            app:iconSize="50dp"
            app:iconTint="@color/ordinary" />

        <Button
            android:id="@+id/button_thismonth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:autoSizeTextType="none"
            android:backgroundTint="#FFFFFF"
            android:freezesText="false"
            android:maxLines="2"
            android:text="this month"
            android:textColor="@color/ordinary"
            android:textSize="10sp"
            android:visibility="invisible"
            app:icon="@drawable/ic_baseline_today_24"
            app:iconSize="50dp"
            app:iconTint="@color/ordinary" />
    </LinearLayout>

</LinearLayout>