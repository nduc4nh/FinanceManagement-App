<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Categories.CategoryInput">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:id="@+id/name_row_cate"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:hint="Category name"
                android:text="Name"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/cate_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:ems="10"
                android:hint="Category name"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:id="@+id/desc_row_cate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/category_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="Bio"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/cate_desc_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:id="@+id/limit_row_cate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="invisible">

            <TextView
                android:id="@+id/category_limitation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:text="Limit"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/cate_limit_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:ems="10"
                android:hint="Optional"
                android:inputType="numberSigned|textPersonName" />
        </TableRow>

    </TableLayout>
</FrameLayout>